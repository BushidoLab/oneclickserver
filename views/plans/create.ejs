<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>

<body class="text-center">

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/coins/create">Coins</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/billing">Billing</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/products/create">Create Products</a>
        </li>
        <li class="nav-item active">
            <a class="nav-link" href="/plans/create">Create Plans</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-8">
        <form class="form-signin" method="post" action="/plans/create">
          <img class="mb-4" src="../images/anon.png" alt="" width="100" height="100">
          <h1 class="h3 mb-3 font-weight-normal">Create new plan</h1>
          <!-- <label for="inputEmail" class="sr-only">TX HASH</label> -->
          <select name="product" class="form-control" placeholder="Select Category">
              <option value="">Select Product</option>
              <% products.forEach(function(product) { %>
                <option value="<%=product.id%>"><%=product.name%> (<%=product.description%>)</option>
            <%})%>
          </select>
          <input id="inputEmail" class="form-control" placeholder="description" name="description" required autofocus>
          <button class="btn btn-lg btn-primary btn-block mt-4" type="submit">Submit</button>
        </form>
      </div>
    </div>
  </div>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-8">
        <h1 class="h3 mb-3 font-weight-normal">Your Plans</h1>
        <%if (plans.length > 0) { %>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Description</th>
              <th scope="col">Amount</th>
            </tr>
          </thead>
          <tbody>
            <% plans.forEach(function (p) { %>
            <tr>
              <td>
                <%= p.name %>
              </td>
              <td>
                <%= p.description %>
              </td>
              <td>
                $<%= Math.floor(p.stripePlan.amount / 1e2) %>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } %>
      </div>
    </div>
  </div>

</body>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</head>

</html>
